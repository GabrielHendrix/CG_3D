{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${fileDirname}/**.cpp",
                "${fileDirname}/**.h",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}